\ProvidesPackage{beamercolorthemeBath}

\RequirePackage{bathpalette}

\newif\ifbeamer@CSCT
\beamer@CSCTfalse
\DeclareOptionBeamer{csct}{\beamer@CSCTtrue}
\ProcessOptionsBeamer

\ifbeamer@CSCT
\usecolortheme[named=Slate]{structure}
\else
\usecolortheme[named=Research]{structure}
\fi

\setbeamercolor*{frametitle}{fg=Slate}
\setbeamercolor*{framesubtitle}{fg=Slate}

\setbeamercolor{block title}{use={structure},bg=structure.fg,fg=structure.bg}
\setbeamercolor{block body}{use={structure,normal text},bg=structure.fg!10,fg=normal text.fg}
\setbeamercolor{alerted text}{fg=Hovange}